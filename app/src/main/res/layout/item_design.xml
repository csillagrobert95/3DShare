<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_148"
        android:layout_marginTop="@dimen/space_8"
        android:background="@color/white"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/white"
        android:foreground="?android:selectableItemBackground"
        app:cardCornerRadius="@dimen/radius_small">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/design_name"
                android:layout_width="@dimen/space_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_16"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Test design" />

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/space_148"
                android:layout_height="@dimen/space_148"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/space_0"
                android:layout_marginLeft="@dimen/space_0"
                android:layout_marginTop="@dimen/space_0"
                android:contentDescription="@string/project_image"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/design_description"
                android:layout_width="@dimen/space_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_8"
                tools:text="Test design"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/design_name" />

            <TextView
                android:id="@+id/design_dimension"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_8"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/design_description"
                tools:text="Test design" />

            <TextView
                android:id="@+id/design_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_8"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/design_dimension"
                tools:text="Test design" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>